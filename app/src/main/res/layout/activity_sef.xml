<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#57C115"
tools:context=".SefActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Angajati"
        android:textSize="33dp"
        />

    <TableLayout
        android:id="@+id/tabel_angajati"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="153dp"
        android:paddingTop="21dp"
        >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="102dp"
            android:text="Angajat">

            <TextView
                android:id="@+id/nume_angajat"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="50"
                android:text="Angajat"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/status_angajat"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="50"
                android:text="Status"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/sarcina_angajat"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="50"
                android:text="Sarcina"
                android:textSize="20sp" />
        </TableRow>

    </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Productie"
        android:textSize="33dp"
        />

    <TableLayout
        android:id="@+id/tabel_productie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="213dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingTop="30dp"
            android:text="Angajat">

            <TextView
                android:id="@+id/nume_produc"
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="50"
                android:text="Denumire"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/cantitate_produs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="190"
                android:text="Cantitate"
                android:textSize="23sp" />
        </TableRow>

    </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Defectiuni"
        android:textSize="33dp"
        />

    <TableLayout
        android:id="@+id/tabel_defectiuni"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="233dp"
        android:paddingTop="21dp"
        android:paddingBottom="1dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="14dp"
            android:text="Angajat">

            <TextView
                android:id="@+id/nume_utilaj"
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="50"
                android:text="Utilaj"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/gravitate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="190"
                android:text="Gravitate"
                android:textSize="23sp" />
        </TableRow>

    </TableLayout>


</LinearLayout>

</ScrollView>